<?xml version="1.0" encoding="UTF-8"?>
<project name="FILTER.js" basedir="." default="build">
	<property name="build_dir" value="./" description="FILTER.js build directory" />
	<property name="build_py" value="${build_dir}/build.py" description="FILTER.js 'build.py' file" />
	<property name="python_dir" value="" description="Python directory, leave empty if in classpath or don't forget ending slash" />

    <target name="build" description="Build all FILTER.js">
    	<exec executable="${python_dir}python">
    	    <arg value="${build_py}"/>
    	    <arg value="--all"/>
    	  </exec>
    </target>

	<target name="debug" description="Build debug FILTER.js">
    	<exec executable="${python_dir}python">
    	    <arg value="${build_py}"/>
    	    <arg value="--all"/>
    	    <arg value="--debug"/>
    	  </exec>
    </target>
	
    <target name="minified" description="Build minified FILTER.js">
    	<exec executable="${python_dir}python">
    	    <arg value="${build_py}"/>
    	    <arg value="--all"/>
    	    <arg value="--minified"/>
    	  </exec>
    </target>
</project>
